@model IEnumerable<Presentation.Models.ViewModels.ListFlightsViewModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Flights Available</h1>

@* <p>
    <a asp-action="Create">Create New</a>
</p> *@
<table class="table">
    <thead>
        <tr>
            @* <th>
                @Html.DisplayNameFor(model => model.Id)
            </th> *@
            @* <th>
                @Html.DisplayNameFor(model => model.Rows)
            </th>
            <th>
